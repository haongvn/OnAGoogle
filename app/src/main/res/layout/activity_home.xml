<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/wel"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:padding="20dp"
        android:src="@drawable/logo_icon"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wel"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />


    <GridLayout
        android:layout_width="342dp"
        android:layout_height="390dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="170dp"
        android:columnCount="5"
        android:orientation="vertical"
        android:rowCount="4">

        <ImageButton
            android:id="@+id/imgButtonLookupDictionary"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:src="@drawable/lookup_dictionary_100_100" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Tra từ điển"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgButtonStatistics"
            android:layout_width="118dp"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:src="@drawable/statistics_120" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Thống kê"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgButtonTraining"
            android:layout_width="wrap_content"
            android:layout_height="114dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:src="@drawable/studying_120" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:paddingLeft="30dp"
            android:text="Ôn luyện"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgButtonGivingFeedback"
            android:layout_width="135dp"
            android:layout_height="109dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:contentDescription="GridView"
            android:src="@drawable/feedback_120" />

        <TextView
            android:id="@+id/txtGivingFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:paddingLeft="20dp"
            android:text="Gửi phản hồi"
            android:textStyle="bold" />

    </GridLayout>


    <ImageButton
        android:id="@+id/signInGoogle"
        android:layout_width="123dp"
        android:layout_height="104dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        android:layout_marginBottom="19dp"
        android:background="@color/white"
        android:src="@drawable/google_100" />
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="670dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#686363"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Đăng xuất"
        android:textStyle="bold" />


</RelativeLayout>